        <%= image_tag("map.png", class: "map-contato") %>
      </div>
      <div class="col col-xs-12 col-md-6 d-flex">
        <form action="https://formspree.io/f/mgepnwaq" method="POST" style="font-family: 'Oswald'">
          <h4 style='text-align: center;'>Fale com a gente!</h4>
          <label  style="margin-top: 20px; margin-right: 4vh;"> Seu email: <br>
            <input type="text" name="_replyto" style="width: 30vh">
          </label>
          <label  style="margin-top: 20px;"> Nome completo: <br>
            <input type="text" name="name" style="width: 30vh">
          </label>
          <label style="margin-top: 20px"> Mensagem: <br>
            <textarea name="message" style="width: 64vh; height: 15vh;"></textarea>
          </label><br>
          <button type="submit" style="background-color: #c73858; color: white; width: 10vh">Send</button>
        </form>
      </div>
    </div>
  </div>
</div>
